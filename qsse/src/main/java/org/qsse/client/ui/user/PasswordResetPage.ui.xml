<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../style.css" />
	
	<g:HTMLPanel addStyleNames="{style.pageWidht}">
		<g:Label addStyleNames="{style.heading}" >Reset Password</g:Label>
		<g:Label ui:field="validationMessage" addStyleNames="{style.validationMessage}"></g:Label>
		<g:VerticalPanel ui:field="loginBox" styleName="{style.loginBox}">		

			<g:HorizontalPanel spacing="10">
				<g:Label styleName="{style.labelWidth} {style.labelBig}">Old Password: *</g:Label>
				<g:PasswordTextBox ui:field="oldPassword"  addStyleNames="{style.textBox}" />
			</g:HorizontalPanel>
			
			<g:HorizontalPanel spacing="10">
				<g:Label styleName="{style.labelWidth} {style.labelBig}">New Password: *</g:Label>
				<g:PasswordTextBox ui:field="newPassword"  addStyleNames="{style.textBox}" />
			</g:HorizontalPanel>
			
			<g:HorizontalPanel spacing="10" width="100%">
				<g:Label ui:field="save" styleName="{style.button} {style.floatRight}" >Save</g:Label>
			</g:HorizontalPanel>
				
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 